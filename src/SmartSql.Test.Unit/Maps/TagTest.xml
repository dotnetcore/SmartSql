<?xml version="1.0" encoding="utf-8" ?>

<SmartSqlMap Scope="TagTest" xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
    <Statements>
        <Statement Id="Dynamic">
            Select * From T_Table T
            <Dynamic Prepend="Where">
                <IsNotEmpty Prepend="And" Property="Property">
                    T.Property=?Property
                </IsNotEmpty>
            </Dynamic>
        </Statement>
        <Statement Id="Env">
            Select * From T_Table T
            <Where>
                <Env DbProvider="SqlServer" Prepend="And">
                    <IsNotEmpty Property="Property">
                        T.SqlServer=?Property
                    </IsNotEmpty>
                </Env>
                <Env DbProvider="MySql">
                    <IsNotEmpty Property="Property">
                        T.Mysql=?Property
                    </IsNotEmpty>
                </Env>
            </Where>
        </Statement>
        <Statement Id="Now">
            <Now Property="NowTime"/>
            Select ?NowTime;
        </Statement>
        <Statement Id="UUID">
            <UUID Property="UUID"/>
            Select ?UUID;
        </Statement>
        <Statement Id="UUIDToN">
            <UUID Property="UUID" Format="N"/>
            Select ?UUID;
        </Statement>
        <Statement Id="Set">
            Update T_Table
            <Set>
                <IsProperty Prepend="," Property="Property1">
                    Property1=@Property1
                </IsProperty>
                <IsProperty Prepend="," Property="Property2">
                    Property2=@Property2
                </IsProperty>
            </Set>
            Where Id=@Id
        </Statement>
    </Statements>
</SmartSqlMap>